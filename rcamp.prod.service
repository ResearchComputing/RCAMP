[Unit]
Description=RCAMP Docker Compose Service (Staging)
Requires=docker.service
After=docker.service

[Service]
WorkingDirectory=/opt/RCAMP
ExecStart=/usr/bin/docker-compose -f docker-compose.yml -f docker-compose.prod.yml up
ExecStop=/usr/bin/docker-compose -f docker-compose.yml -f docker-compose.prod.yml down --remove-orphans
TimeoutStartSec=0
Restart=on-failure

[Install]
WantedBy=multi-user.target
